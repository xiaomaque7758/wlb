<!--pages/shoplist/shoplist.wxml-->
<!--美食列表-->
<view class="shop" wx:for="{{list}}" wx:key="index">
    <image src='http://127.0.0.1:3000/img/niupai.png' class='shop-img'></image>
      <view class='shop-info'>
         <text class='shop-title ell'>店铺名称:{{item.name}}</text>
         <text class='shop-tle'>电话:{{item.tel}}</text>
         <text class='shop-add'>地址:{{item.addr}}</text>
         <text class='shop-time'>营业时间:{{item.mtime}}</text>
      </view>
      <view class='shop-star'>
        <view class='star-after'>★★★★★</view>
        <view class='star-before' style='width:{{item.star}}%'>★★★★★</view>
      </view>
</view>
