/* pages/shoplist/shoplist.wxss */
/*组件白色背景*/
page{
  background-color: #fff;
}
/*当前商品条目*/
.shop{
  padding: 20rpx;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  position: relative;
}
/*当前商品图片*/
.shop-img{
  width: 220rpx;
  height: 160rpx;
  margin-right: 20rpx;
}
/*商品信息*/
.shop-info{
  width: 520rpx;
  font-size: 12px;
  color: #666;
  display: flex;
  flex-direction: column;
  line-height: 1.5;
}
/*店铺名称*/
.shop-title{
  font-size: 16px;
  color: #333;
  width:380rpx;
  font-weight: 700;
  letter-spacing: 2px;
}

.shop-tle{
  font-size: 13px;
  margin-top: 1px;
}

.shop-add{
  font-size: 13px;
   margin-top: 1px;
}

.shop-time{
  font-size:13px;
   margin-top: 1px;
}

/*打分*/
.shop-star{
  position: absolute;  /*打分区域绝对定位*/
  right: 20rpx;
  top: 20rpx;
}

.star-after{
  color: #e2e2e2;
}
.star-before{
  color: #f19e38;
  position: absolute;
  top: 0;
  left: 0;
  width: 75%;   /*分数*/
  overflow: hidden;
}

